{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "es2022"],
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "types": ["d3", "leaflet", "vuetify"]
  },
  "include": ["./app.d.ts", "./src/**/*.js", "./src/**/*.ts", "./src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
