{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "es2020"],
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "types": ["d3", "leaflet", "vuetify"]
  },
  "include": ["app.d.ts", "./src/**/*", "./src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
