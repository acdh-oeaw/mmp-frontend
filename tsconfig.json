{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "es2022"],
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "types": ["d3", "leaflet", "node", "vuetify"]
  },
  "include": ["./app.d.ts", "./**/*.js", "./**/*.ts", "./**/*.vue"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "vueCompilerOptions": {
    "target": 2.7
  }
}
