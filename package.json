{
	"name": "@acdh-oeaw/mmp-frontend",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "20.x",
		"npm": "10.x"
	},
	"packageManager": "npm@10.2.4",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"generate": "nuxt generate",
		"generate:favicons": "dotenv -- tsx ./scripts/generate-favicons.ts",
		"lint:check": "run-p lint:*:check",
		"lint:fix": "run-p lint:*:fix",
		"lint:code:check": "eslint . --cache --ext .cjs,.mjs,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --allow-empty-input --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"postinstall": "nuxt prepare",
		"prepare": "run-s setup generate:*",
		"preview": "nuxt preview",
		"setup": "simple-git-hooks || exit 0",
		"start": "nuxt preview",
		"test": "exit 0",
		"types:check": "nuxt typecheck",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.8",
		"@fontsource/roboto-flex": "^4.5.5",
		"@headlessui/vue": "^1.7.13",
		"@heroicons/vue": "^2.0.17",
		"@mdx-js/mdx": "^2.3.0",
		"@stefanprobst/request": "^0.2.1",
		"@zag-js/range-slider": "^0.6.0",
		"@zag-js/slider": "^0.6.0",
		"@zag-js/vue": "^0.6.0",
		"d3": "^7.8.4",
		"estree-util-value-to-estree": "^2.1.0",
		"force-graph": "^1.43.1",
		"graphology": "^0.25.1",
		"graphology-gexf": "^0.10.3",
		"highcharts": "^10.3.3",
		"leaflet": "^1.9.3",
		"nuxt": "^3.4.2",
		"unist-util-visit": "^4.1.2",
		"vue-jsx-runtime": "^0.1.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.7",
		"@acdh-oeaw/eslint-config-nuxt": "^1.0.13",
		"@acdh-oeaw/eslint-config-vue": "^1.0.12",
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@acdh-oeaw/stylelint-config": "^2.0.1",
		"@acdh-oeaw/tsconfig": "^1.0.2",
		"@headlessui/tailwindcss": "^0.1.3",
		"@nuxt/image-edge": "^1.1.0-28346300.6030589",
		"@stefanprobst/favicons": "^2.2.2",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@tailwindcss/typography": "^0.5.9",
		"@tanstack/eslint-plugin-query": "^4.29.4",
		"@tanstack/vue-query": "^4.29.5",
		"@types/d3": "^7.4.0",
		"@types/geojson": "^7946.0.10",
		"@types/leaflet": "^1.9.3",
		"@types/sharp": "^0.31.1",
		"autoprefixer": "^10.4.14",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.57.0",
		"eslint-plugin-tailwindcss": "^3.15.1",
		"graphology-types": "^0.24.7",
		"lint-staged": "^13.2.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.23",
		"postcss-html": "^1.5.0",
		"postcss-nesting": "^11.2.2",
		"prettier": "^3.2.5",
		"sharp": "^0.32.0",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^16.3.1",
		"tailwindcss": "^3.3.2",
		"tsx": "^3.12.6",
		"typescript": "^5.4.4",
		"vue-tsc": "^1.4.4"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue",
			"@acdh-oeaw/eslint-config-nuxt",
			"plugin:@tanstack/eslint-plugin-query/recommended",
			"plugin:eslint-plugin-tailwindcss/recommended"
		]
	},
	"lint-staged": {
		"*.@(cjs|mjs|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(cjs|css|mjs|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
