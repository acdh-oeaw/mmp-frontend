{
  "name": "@acdh-ch/mmp-frontend",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 8080",
    "format": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "npm run format -- --write",
    "lint": "run-p lint:*:check",
    "lint:fix": "run-p lint:*:fix",
    "lint:code:check": "eslint . --cache --ext cjs,js,mjs,ts,vue --ignore-path .gitignore",
    "lint:code:fix": "npm run lint:code:check -- --fix",
    "lint:styles:check": "stylelint \"**/*.@(css|html|vue)\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "npm run lint:styles:check -- --fix",
    "prepare": "npm run setup",
    "preview": "vite preview --port 8080",
    "setup": "simple-git-hooks || exit 0",
    "serve": "npm run dev",
    "typecheck": "vue-tsc --noEmit",
    "validate": "run-s format lint typecheck"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "dependencies": {
    "@fontsource/roboto-flex": "^4.5.2",
    "@mdi/font": "^7.0.96",
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/group-by": "^1.1.0",
    "@stefanprobst/key-by": "^1.0.1",
    "@stefanprobst/object": "^1.2.0",
    "@stefanprobst/request": "^0.2.1",
    "@tanstack/vue-query": "^4.18.0",
    "d3": "^7.6.1",
    "d3-cloud": "^1.2.5",
    "force-graph": "^1.42.16",
    "highcharts": "^10.3.1",
    "highcharts-vue": "^1.4.0",
    "leaflet": "^1.9.3",
    "vue": "^2.7.10",
    "vue-router": "^3.6.5",
    "vuetify": "^2.6.12",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/d3-cloud": "^1.2.5",
    "@types/geojson": "^7946.0.10",
    "@types/leaflet": "^1.9.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vitejs/plugin-vue2": "^2.0.1",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^9.8.0",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.0",
    "sass": "~1.32.13",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^14.15.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "unplugin-vue-components": "^0.22.11",
    "vite": "^3.2.4",
    "vue-tsc": "^1.0.9"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "not op_mini all"
  ],
  "eslintConfig": {
    "root": true,
    "reportUnusedDisableDirectives": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:vue/recommended",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "extraFileExtensions": [
        ".vue"
      ],
      "parser": "@typescript-eslint/parser",
      "project": [
        "tsconfig.json",
        "tsconfig.node.json"
      ]
    },
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-debugger": "warn",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-named-as-default-member": "off",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "vue/multi-word-component-names": "off",
      "vue/no-template-shadow": "off",
      "vue/no-v-html": "off",
      "vue/require-default-prop": "off",
      "vue/require-prop-types": "off",
      "vue/valid-v-slot": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "extensions": [
            ".js",
            ".mjs",
            ".ts",
            ".vue"
          ],
          "project": "tsconfig.json"
        }
      }
    },
    "overrides": [
      {
        "files": [
          "vue.config.mjs"
        ],
        "rules": {
          "import/extensions": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.@(cjs|js|mjs|ts)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(json|md|yml)": "prettier --cache --write",
    "*.@(css|html)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.vue": [
      "eslint --cache --fix",
      "stylelint --cache --fix",
      "prettier --cache --write"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-html": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "stylelint": {
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier",
      "stylelint-config-html/html",
      "stylelint-config-html/vue"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "volta": {
    "node": "18.12.1"
  }
}
