{
  "name": "@acdh-ch/mmp-frontend",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format:check": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "npm run format:check -- --write",
    "lint": "run-p lint:*:check",
    "lint:fix": "run-p lint:*:fix",
    "lint:code:check": "eslint . --cache --ext cjs,js,mjs,ts,vue --ignore-path .gitignore",
    "lint:code:fix": "npm run lint:code:check -- --fix",
    "lint:styles:check": "stylelint \"**/*.@(css|html|vue)\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "npm run lint:styles:check -- --fix",
    "prepare": "npm run setup",
    "preview": "vite preview",
    "setup": "simple-git-hooks || exit 0",
    "serve": "npm run dev",
    "typecheck": "vue-tsc --noEmit",
    "validate": "run-s format lint typecheck"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "dependencies": {
    "@fontsource/roboto-flex": "^4.5.2",
    "@mdi/font": "^7.0.96",
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/group-by": "^1.1.0",
    "@stefanprobst/request": "^0.2.1",
    "@tanstack/vue-query": "^4.14.3",
    "@turf/turf": "^6.5.0",
    "d3": "^7.4.4",
    "force-graph": "^1.42.2",
    "fuse.js": "^6.4.6",
    "highcharts": "^9.3.2",
    "highcharts-vue": "^1.4.0",
    "leaflet": "1.7.1",
    "leaflet.markercluster": "1.5.3",
    "leaflet.markercluster.placementstrategies": "0.2.1",
    "vue": "^2.7.10",
    "vue-d3-cloud": "^0.2.0",
    "vue-router": "^3.6.5",
    "vue2-leaflet": "^2.7.1",
    "vue2-leaflet-markercluster": "^3.1.0",
    "vuetify": "^2.6.10",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/geojson": "^7946.0.10",
    "@types/leaflet": "1.7.11",
    "@types/leaflet.markercluster": "1.5.1",
    "@types/node": "^16.18.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vitejs/plugin-vue2": "^2.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^9.5.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.0",
    "sass": "~1.32.13",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.13.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "unplugin-vue-components": "^0.22.9",
    "vite": "^3.2.0",
    "vue-tsc": "^1.0.9"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "not op_mini all"
  ],
  "eslintConfig": {
    "root": true,
    "reportUnusedDisableDirectives": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:vue/recommended",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "extraFileExtensions": [
        ".vue"
      ],
      "parser": "@typescript-eslint/parser",
      "project": [
        "tsconfig.json",
        "tsconfig.node.json"
      ]
    },
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-debugger": "warn",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-exports": "error",
      "@typescript-eslint/consistent-type-imports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-named-as-default-member": "off",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "vue/multi-word-component-names": "off",
      "vue/no-template-shadow": "off",
      "vue/no-v-html": "off",
      "vue/require-default-prop": "off",
      "vue/require-prop-types": "off",
      "vue/valid-v-slot": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "extensions": [
            ".js",
            ".mjs",
            ".ts",
            ".vue"
          ],
          "project": "tsconfig.json"
        }
      }
    },
    "overrides": [
      {
        "files": [
          "vue.config.mjs"
        ],
        "rules": {
          "import/extensions": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.@(cjs|js|mjs|ts)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css|html)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.vue": [
      "eslint --cache --fix",
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.!(cjs|css|html|js|mjs|ts|vue)": "prettier --cache --ignore-unknown --write"
  },
  "postcss": {
    "plugins": {
      "postcss-html": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "stylelint": {
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier",
      "stylelint-config-html/html",
      "stylelint-config-html/vue"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "volta": {
    "node": "18.13.0"
  }
}
