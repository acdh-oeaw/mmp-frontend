{
	"name": "@acdh-oeaw/mmp-frontend",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"npm": "9.x"
	},
	"packageManager": "npm@9.3.1",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"generate": "nuxt generate",
		"generate:favicons": "dotenv -- tsx ./scripts/generate-favicons.ts",
		"lint:check": "run-p lint:*:check",
		"lint:fix": "run-p lint:*:fix",
		"lint:code:check": "eslint . --cache --ext .cjs,.mjs,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --allow-empty-input --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"postinstall": "nuxt prepare",
		"prepare": "npm run setup",
		"preview": "nuxt preview",
		"setup": "simple-git-hooks || exit 0",
		"test": "exit 0",
		"types:check": "nuxt typecheck",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@fontsource/roboto-flex": "^4.5.2",
		"@headlessui/vue": "^1.7.9",
		"@heroicons/vue": "^2.0.15",
		"@stefanprobst/assert": "^1.0.3",
		"@stefanprobst/group-by": "^1.1.0",
		"@stefanprobst/request": "^0.2.1",
		"force-graph": "^1.43.0",
		"leaflet": "^1.9.3",
		"nuxt": "^3.2.0",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@stefanprobst/eslint-config": "^1.0.10",
		"@stefanprobst/eslint-config-vue": "^1.0.2",
		"@stefanprobst/favicons": "^2.2.1",
		"@stefanprobst/log": "^1.0.3",
		"@stefanprobst/prettier-config": "^3.0.0",
		"@stefanprobst/stylelint-config": "^3.0.1",
		"@tanstack/eslint-plugin-query": "^4.24.5",
		"@tanstack/vue-query": "^4.24.4",
		"@types/geojson": "^7946.0.10",
		"@types/leaflet": "^1.9.0",
		"@types/sharp": "^0.31.1",
		"autoprefixer": "^10.4.13",
		"dotenv-cli": "^7.0.0",
		"eslint": "^8.33.0",
		"eslint-plugin-nuxt": "^4.0.0",
		"eslint-plugin-tailwindcss": "^3.8.3",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-custom-media": "^9.1.2",
		"postcss-html": "^1.5.0",
		"postcss-nesting": "^11.1.0",
		"prettier": "^2.8.4",
		"sharp": "^0.31.3",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.0.0",
		"stylelint-config-html": "^1.1.0",
		"tailwindcss": "^3.2.6",
		"tsx": "^3.12.3",
		"typescript": "^4.9.5",
		"vue-tsc": "^1.0.24"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"plugin:eslint-plugin-nuxt/recommended",
			"@stefanprobst/eslint-config",
			"@stefanprobst/eslint-config-vue",
			"plugin:@tanstack/eslint-plugin-query/recommended",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"settings": {
			"tailwindcss": {
				"config": "./tailwind.config.cjs"
			}
		},
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off"
		},
		"overrides": [
			{
				"files": [
					"*.vue"
				],
				"rules": {
					"vue/multi-word-component-names": "off"
				}
			},
			{
				"files": [
					"./src/layouts/**/*.vue",
					"./src/pages/**/*.vue"
				],
				"rules": {
					"vue/no-multiple-template-root": "error"
				}
			}
		]
	},
	"lint-staged": {
		"*.@(cjs|mjs|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(cjs|css|mjs|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-html/vue",
			"@stefanprobst/stylelint-config"
		]
	},
	"volta": {
		"node": "18.14.0"
	}
}
