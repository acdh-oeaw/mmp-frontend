{
	"name": "@acdh-oeaw/mmp-frontend",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"pnpm": "8.x"
	},
	"packageManager": "pnpm@8.7.4",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"generate": "nuxt generate",
		"generate:favicons": "dotenv -- tsx ./scripts/generate-favicons.ts",
		"lint:check": "run-p \"lint:*:check\"",
		"lint:fix": "run-p \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .cjs,.mjs,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --allow-empty-input --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"postinstall": "nuxt prepare",
		"prepare": "run-s setup \"generate:*\"",
		"preview": "nuxt preview",
		"setup": "simple-git-hooks || exit 0",
		"start": "nuxt preview",
		"test": "exit 0",
		"types:check": "nuxt typecheck",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@fontsource-variable/roboto-flex": "^5.0.8",
		"@headlessui/vue": "^1.7.16",
		"@heroicons/vue": "^2.0.18",
		"@mdx-js/mdx": "^2.3.0",
		"@zag-js/range-slider": "^0.19.0",
		"@zag-js/slider": "^0.19.0",
		"@zag-js/vue": "^0.19.0",
		"d3": "^7.8.5",
		"estree-util-value-to-estree": "^3.0.1",
		"force-graph": "^1.43.4",
		"graphology": "^0.25.4",
		"graphology-gexf": "^0.11.0",
		"highcharts": "^11.1.0",
		"leaflet": "^1.9.4",
		"nuxt": "^3.7.1",
		"unist-util-visit": "^5.0.0",
		"vue-jsx-runtime": "^0.1.0",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.3",
		"@acdh-oeaw/eslint-config-nuxt": "^1.0.4",
		"@acdh-oeaw/eslint-config-vue": "^1.0.4",
		"@acdh-oeaw/lib": "^0.1.6",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/stylelint-config": "^1.0.5",
		"@acdh-oeaw/tsconfig": "^1.0.1",
		"@headlessui/tailwindcss": "^0.2.0",
		"@nuxt/image": "rc",
		"@stefanprobst/favicons": "^2.2.2",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@tailwindcss/typography": "^0.5.10",
		"@tanstack/eslint-plugin-query": "^4.34.1",
		"@tanstack/vue-query": "^4.35.2",
		"@types/d3": "^7.4.0",
		"@types/geojson": "^7946.0.10",
		"@types/leaflet": "^1.9.4",
		"@types/node": "^18.17.14",
		"autoprefixer": "^10.4.15",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.48.0",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"graphology-types": "^0.24.7",
		"lint-staged": "^14.0.1",
		"npm-run-all2": "^6.0.6",
		"postcss": "^8.4.29",
		"postcss-nesting": "^12.0.1",
		"prettier": "^3.0.3",
		"sharp": "^0.32.5",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.10.3",
		"tailwindcss": "^3.3.3",
		"tsx": "^3.12.8",
		"typescript": "^5.2.2",
		"vue-tsc": "^1.8.10"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue",
			"@acdh-oeaw/eslint-config-nuxt",
			"plugin:@tanstack/eslint-plugin-query/recommended",
			"plugin:eslint-plugin-tailwindcss/recommended"
		]
	},
	"lint-staged": {
		"*.@(cjs|mjs|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.vue": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(cjs|css|mjs|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	},
	"volta": {
		"node": "18.16.1"
	}
}
